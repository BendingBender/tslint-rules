  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BendingBender/tslint-rules/issues"
  },
  "homepage": "https://github.com/BendingBender/tslint-rules#readme",
  "devDependencies": {
    "@types/jasmine": "^2.5.35",
    "@types/node": "^6.0.45",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "rimraf": "^2.5.4",
    "tslint": "^3.15.1",
    "tslint-microsoft-contrib": "^2.0.12",
    "typescript": "^2.0.3"
  }
}
