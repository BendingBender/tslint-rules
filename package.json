  "description": "Custom rules for tslint",
  "main": "tslint.json",
  "scripts": {
    "clean": "rimraf build",
    "build": "tsc -p tsconfig.json",
    "lint": "tslint 'src/**/*.ts'",
    "test": "JASMINE_CONFIG_PATH=./jasmine.json jasmine"
